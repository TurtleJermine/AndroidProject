<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/signIn_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/appIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/bg1"
            app:riv_corner_radius="20dp" />
        <!--    app:riv_oval="true"-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="食刻"
            android:textSize="25dp"/>
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:background="@drawable/editframe">

            <EditText
                android:id="@+id/signIn_account"
                android:layout_gravity="center"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:hint="输入账号"
                android:lines="1"
                android:inputType="text"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:background="@drawable/editframe">

            <EditText
                android:id="@+id/signIn_password"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:hint="输入密码"
                android:lines="1"
                android:inputType="text"/>

        </LinearLayout>


        <TextView
            android:id="@+id/signIn_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="密码错误"
            android:textSize="20dp"
            android:textColor="@color/Red"
            android:visibility="gone"/>
        <Button
            android:id="@+id/signIn_signInButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/myroundbutton"
            android:text="登录"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <Button
                android:id="@+id/signIn_forgetPasswordButton"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:text="忘记密码"
                android:background="@drawable/mylongbutton"/>
            <Button
                android:id="@+id/signIn_signUpButton"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:text="注册"
                android:background="@drawable/mylongbutton"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/signUp_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:text="新用户注册"
            android:textSize="30dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/editframe">

            <EditText
                android:id="@+id/signUp_account"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:hint="设置账号"
                android:lines="1"
                android:inputType="text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:background="@drawable/editframe">

            <EditText
                android:id="@+id/signUp_password"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:hint="设置密码"
                android:lines="1"
                android:inputType="text"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <Button
                android:id="@+id/signUp_signUpButton"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:text="注册新用户"
                android:background="@drawable/mylongbutton"/>
            <Button
                android:id="@+id/signUn_goBackButton"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:text="返回"
                android:background="@drawable/mylongbutton"/>

        </LinearLayout>


        <TextView
            android:id="@+id/signUp_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="账号已被注册"
            android:textSize="20dp"
            android:textColor="@color/Red"
            android:visibility="gone"/>

    </LinearLayout>





</LinearLayout>